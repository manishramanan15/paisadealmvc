@model Biztek.Paisadeal.App.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}


<div class="container">
    <div class="col-md-12">
        <div class="content-box" style="border:2px solid #e2e2e2; border-radius:3px;background:#f2f2f2">
            <h1 style="padding-top:30px;color:#ff8080;font-size:28px;font-weight:bold">
                Change your password
            </h1>
        </div>
    </div>
    <div class="logmod">
        <div class="logmod__wrapper">
            <div class="logmod__container">
                <ul class="logmod__tabs" style="padding-bottom:40px">
                    <li data-tabtar="lgm-2" class="current"><a href="#">Change Password</a></li>
                </ul>
                <div class="logmod__tab-wrapper">
                    <div class="logmod__tab lgm-1 show">
                        <div class="logmod__form">
                            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="sminputs">
                                    <div class="input full">
                                        <div class="col-md-3">
                                            @Html.LabelFor(m => m.OldPassword, new { @class = "string optional" })
                                        </div>
                                        <div class="col-md-9">
                                            @Html.TextBoxFor(m => m.OldPassword, new { @class = "string optional" })
                                        </div>
                                    </div>
                                </div>
                                <div class="sminputs">
                                    <div class="input full">

                                        <div class="col-md-3"> @Html.LabelFor(m => m.NewPassword, new { @class = "string optional" })</div>
                                        <div class="col-md-9">
                                            @Html.PasswordFor(m => m.NewPassword, new { @class = "string optional" })
                                        </div>

                                    </div>
                                </div>

                                <div class="sminputs">
                                    <div class="input full">
                                        <div class="col-md-3"> @Html.LabelFor(m => m.ConfirmPassword, new { @class = "string optional" })</div>
                                        <div class="col-md-9">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "string optional" })
                                        </div>
                                    </div>
                                </div>
                                <div class="simform__actions" style="text-align:center">
                                    <div>  <button class="sumbit" name="submit" type="sumbit" value="Log In">Change Password</button></div>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}